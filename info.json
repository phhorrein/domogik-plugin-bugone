{
	"json_version": 2,
    "identity": {
        "author": "Freki", 
        "author_email": "freki at frekilabs dot fr", 
        "tags": ["bugone", "temperature", "humidity"], 
        "dependencies": [
            {   
                "id": "pyserial (>=2.5)",
                "type": "python"
            }
        ],
        "description": "BugOne plugin", 
        "domogik_min_version": "0.4.2", 
        "name": "bugone", 
        "type": "plugin", 
        "version": "0.2alpha"
    }, 
	 "configuration": [
		 {
			 "default": 0,
			 "description": "Interval between each ping in seconds. If set to 0, let the bugOne daemon manage ping",
			 "key": "interval",
			 "name": "Interval",
			 "required": false,
			 "type": "integer"
		 },
		 {
			 "default": "/dev/ttyUSB0",
			 "description": "Name of the serial port connected to the bugOne sniffer",
			 "key": "bugone_port",
			 "name": "bugOne serial port",
			 "required": true,
			 "type": "string"
		 },
		 {
			 "default": true,
			 "description": "Check this if you want the plugin to automatically search which port is used in case of port renaming when the sniffer has been disconnected",
			 "key": "bugone_reconnect",
			 "name": "Automatically reconnect to sniffer?",
			 "required": true,
			 "type": "boolean"
		 }
	 ],
	 "device_types": {
		 "bugone.temperature": {
			 "description": "Temperature reading from bugOne network",
			 "id": "bugone.temperature",
			 "name": "Temperature",
			 "commands": [],
			 "sensors": ["temperature"],
			 "parameters": [
				 {
					 "key": "device",
					 "xpl": true,
					 "description": "The name of this device",
					 "type": "string"
				 },
				 {
					 "key": "nodeid",
					 "xpl": false,
					 "description": "The node where we found this device",
					 "type": "integer"
				 },
				 {
					 "key": "devid",
					 "xpl": false,
					 "description": "The device ID in the node",
					 "type": "integer"
				 }
			 ]
		 },
		 "bugone.humidity": {
			 "description": "Humidity reading from bugOne network",
			 "id": "bugone.humidity",
			 "name": "Humidity",
			 "commands": [],
			 "sensors": ["humidity"],
			 "parameters": [
				 {
					 "key": "device",
					 "xpl": true,
					 "description": "The name of this device",
					 "type": "string"
				 },
				 {
					 "key": "nodeid",
					 "xpl": false,
					 "description": "The node where we found this device",
					 "type": "integer"
				 },
				 {
					 "key": "devid",
					 "xpl": false,
					 "description": "The device ID in the node",
					 "type": "integer"
				 }
			 ]
		 },
		 "bugone.node": {
			 "description": "Node management for bugOne network",
			 "id": "bugone.node",
			 "name": "BugNode",
			 "commands": [],
			 "sensors" : ["ping", "battery"],
			 "parameters": [
				 {
					 "key": "device",
					 "xpl": true,
					 "description": "The name of this node",
					 "type": "string"
				 },
				 {
					 "key": "nodeid",
					 "xpl": false,
					 "description": "The ID of the node to check",
					 "type": "integer"
				 },
				 {
					 "key": "batid",
					 "xpl": false,
					 "description": "The ID of the battery device",
					 "type": "integer"
				 },
				 {
					 "key": "interval",
					 "xpl": false,
					 "description": "Timeout interval in minutes(after this time, if no data has been received, the node is marked inactive)",
					 "type": "integer"
				 }
			 ]
		 }
	 },
	 "xpl_stats": {
		 "temperature": {
			 "name": "Receive temperature",
			 "schema": "sensor.basic",
			 "parameters": {
				 "static": [
					 {
						 "key": "type",
						 "value": "temp"
					 }
				 ],
				 "device": [],
				 "dynamic": [
					 {
						 "key": "current",
						 "ignore_values": "",
						 "sensor": "temperature"
					 }
				 ]
			 }
		 },
		 "humidity": {
			 "name": "Receive humidity",
			 "schema": "sensor.basic",
			 "parameters": {
				 "static": [
					 {
						 "key": "type",
						 "value": "humidity"
					 }
				 ],
				 "device": [],
				 "dynamic": [
					 {
						 "key": "current",
						 "ignore_values": "",
						 "sensor": "humidity"
					 }
				 ]
			 }
		 },
		 "battery": {
			 "name": "Receive battery status",
			 "schema": "sensor.basic",
			 "parameters": {
				 "static": [
					 {
						 "key": "type",
						 "value": "voltage"
					 }
				 ],
				 "device": [],
				 "dynamic": [
					 {
						 "key": "current",
						 "ignore_values": "",
						 "sensor": "battery"
					 }
				 ]
			 }
		 },
		 "ping": {
			 "name": "Ping status",
			 "schema": "sensor.basic",
			 "parameters": {
				 "static": [
					 {
						 "key": "type",
						 "value": "input"
					 }
				 ],
				 "device": [],
				 "dynamic": [
					 {
						 "key": "current",
						 "ignore_values": "",
						 "sensor": "ping"
					 }
				 ]
			 }
		 }
	 },
	 "sensors": {
		"temperature": {
			"name": "Temperature",
			"data_type": "DT_Temp",
			"conversion": "from_bugone_to_DT_Temp",
			"incremental": false,
			"timeout": 7200,
			"history": {
				"store": true,
				"duplicate": true,
				"max": 0,
				"expire": 0,
				"round_value": 0
			}
		},
		"humidity": {
			"name": "Humidity",
			"data_type": "DT_Humidity",
			"conversion": "from_bugone_to_DT_Humidity",
			"incremental": false,
			"timeout": 7200,
			"history": {
				"store": true,
				"duplicate": true,
				"max": 0,
				"expire": 0,
				"round_value": 0
			}
		},
		"battery": {
			"name": "Battery",
			"data_type": "DT_Volt",
			"conversion": "from_bugone_to_DT_Volt",
			"incremental": false,
			"timeout": 0,
			"history": {
				"store": true,
				"duplicate": true,
				"max": 0,
				"expire": 0,
				"round_value": 0
			}
		},
		"ping": {
			"name": "Node status",
			"data_type": "DT_Switch",
			"conversion": "from_low_high_to_DT_Switch",
			"incremental": false,
			"timeout": "0",
			"history": {
				"store": true,
				"duplicate": false,
				"max": 0,
				"expire": 0,
				"round_value": 0
			}
		}
			
	 },
	 "commands": {},
	 "xpl_commands": {}

}
